{
  "name": "orangehrm",
  "version": "1.0.0",
  "description": "Creating and automating test cases for the @orangehrm system.",
  "scripts": {
    "start": "npx cypress open",
    "clean-downloads": "rm -rf cypress/downloads/*",
    "regression-allureCh": "cypress run -b chrome --env allure=true",
    "regression-allureEl": "cypress run --e2e --env allure=true",
    "allure:clean": "rm -rf allure-results/ cypress/screenshots cypress/videos || true",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "regression:buzz": "cypress run -s cypress/e2e/buzzTab/*",
    "regression:leave": "cypress run -s cypress/e2e/leaveTab/*",
    "regression:login": "cypress run -s cypress/e2e/loginPage/*",
    "regression:pim": "cypress run -s cypress/e2e/pimTab/*",
    "regression:recruitment": "cypress run -s cypress/e2e/recruitmentTab/*",
    "regression:time": "cypress run -s cypress/e2e/timeTab/*",
    "regression:withCloud": "cypress run --record --key d961cdbf-deb2-4156-9705-bf54098c9577",
    "regression:withCloudAndTags": "cypress run -e grepTags=\"@login\" --record --key d961cdbf-deb2-4156-9705-bf54098c9577"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@cypress/grep": "^4.0.0",
    "@shelex/cypress-allure-plugin": "^2.40.0",
    "allure-commandline": "^2.24.0",
    "cypress": "^13.3.1",
    "cypress-mochawesome-reporter": "^3.6.1",
    "cypress-plugin-api": "^2.11.1",
    "typescript": "^5.2.2"
  }
}
